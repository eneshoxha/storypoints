@{
    ViewData["Title"] = "Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">


    <div class="row mb-5">

        <!-- Grid column -->
        <div class="col-md-12">

            <ul class="nav nav-tabs nav-fill fluent-tabs" id="exampleTabsFill" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active show" id="createRoom" data-toggle="tab" href="#linkHomeFill" role="tab" aria-controls="linkHomeFill" aria-selected="false">Create room</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="joinRoom" data-toggle="tab" href="#linkProfileFill" role="tab" aria-controls="linkProfileFill" aria-selected="true">Join room</a>
                </li>
            </ul>
            <div class="tab-content" id="exampleTabsContentFill">
                <div class="tab-pane fade active show" id="linkHomeFill" role="tabpanel" aria-labelledby="createRoom">
                    <div class="row">
                        <div class="w-50 mx-auto">
                            <h1 style="text-align:center">Create a planning poker room</h1>
                            <p style="text-align:center">Start estimating with your team right away using cards</p>
                            <div>
                                <!-- Grid column -->
                                <div class="" style="margin-top:10px; margin-bottom:10px;">
                                    <input placeholder="Your name" type="text" class="form-control">
                                </div>

                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-dark">Create room</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade " id="linkProfileFill" role="tabpanel" aria-labelledby="joinRoom">
                    <div class="row">
                        <div class="w-50 mx-auto">
                            <h1 style="text-align:center">Join planning poker room</h1>
                            <p style="text-align:center">Start estimating with your team right away using cards</p>
                            <div>
                                <!-- Grid column -->
                                <div class="" style="margin-top:10px; margin-bottom:10px;">
                                    <input placeholder="Your name" type="text" class="form-control">
                                </div>
                                <!-- Grid column -->
                                <div class="" style="margin-top:10px; margin-bottom:10px;">
                                    <input placeholder="Room id" type="text" class="form-control">
                                </div>

                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-dark">Join room</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Grid column -->

    </div>

