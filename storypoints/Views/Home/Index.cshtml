<body id="page-top">

    <!-- Navigation -->
    <a class="menu-toggle rounded" href="#">
        <i class="fas fa-bars"></i>
    </a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="#page-top">Home</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="#about">About</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" asp-area="" asp-controller="Room" asp-action="Index">Try it</a>
            </li>
        </ul>
    </nav>

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">Storypoints Poker</h1>
            <h3 class="mb-5">
                <em>A simple online planning poker app designed for remote planning sessions!</em>
            </h3>
            <a class="btn btn-primary btn-xl js-scroll-trigger" asp-area="" asp-controller="Room" asp-action="Index">Try it now!</a>
        </div>
        <div class="overlay"></div>
    </header>

    <!-- About -->
    <section class="content-section bg-light" id="about">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h2>An ad-free app</h2>
                    <p class="lead mb-5">
                        This project started as a tool needed to fulfill our needs of estimating stories while working remote!
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section class="content-section bg-primary text-white text-center" id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
                    <span class="service-icon rounded-circle mx-auto mb-3">
                        <i class="icon-anchor"></i>
                    </span>
                    <h4>
                        <strong>Simple</strong>
                    </h4>
                    <p class="text-faded mb-0">Storypoints poker is a simple card estimation game so we believe the tool should be simple too</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
                    <span class="service-icon rounded-circle mx-auto mb-3">
                        <i class="icon-flag"></i>
                    </span>
                    <h4>
                        <strong>Flexible</strong>
                    </h4>
                    <p class="text-faded mb-0">An agile estimation tool should be able to adapt to your reality and set you in the center of control</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
                    <span class="service-icon rounded-circle mx-auto mb-3">
                        <i class="icon-like"></i>
                    </span>
                    <h4>
                        <strong>Free</strong>
                    </h4>
                    <p class="text- mb-0">
                        We have created the tool to optimize our own process - now we hope you will enjoy it
                    </p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <span class="service-icon rounded-circle mx-auto mb-3">
                        <i class="icon-social-github"></i>
                    </span>
                    <h4>
                        <strong>Open source</strong>
                    </h4>
                    <p class="text-faded mb-0">This app is developed on ASP Core and is open</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Callout -->
    <section class="callout">
        <div class="container text-center">
            <h2 class="mx-auto mb-5">
                Try it!
            </h2>
            <a class="btn btn-primary btn-xl" asp-area="" asp-controller="Room" asp-action="Index">Try it now!</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <ul class="list-inline mb-5">
                <li class="list-inline-item">
                    <a class="social-link rounded-circle text-white" href="https://github.com/eneshoxha">
                        <i class="icon-social-github"></i>
                    </a>
                </li>
            </ul>
            <p class="text-muted small mb-0">Developed with <i class="fas fa-heart"></i> from Enes Hoxha</p>
        </div>
    </footer>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/stylish-portfolio.min.js"></script>

